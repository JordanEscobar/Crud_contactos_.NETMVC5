@model List<ProyectoContactos.Models.Contactos>

@{
    ViewBag.Title = "Inicio";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="row" style="margin-top:30px">
    <div class="col-sm-12">
        <div class="card border-warning">
            <div class="card-heading bg-warning" style="padding:10px">
                <h6 class=" text-light">Lista de contactos</h6>
            </div>
            <div class="card-body">
                <a class="btn btn-success btn-sm" href="@Url.Action("Registrar","Contacto")">Crear Nuevo</a>
                <hr />
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>NOMBRE</th>
                                <th>APELLIDOS</th>
                                <th>CORREO</th>
                                <th style="width:150px"></th>
                            </tr>
                        </thead>  
                        <tbody>
                            @foreach (ProyectoContactos.Models.Contactos item in Model)
                            {
                                <tr>
                                    <td>@item.nombre</td>
                                    <td>@item.apellidos</td>
                                    <td>@item.correo</td>
                                    <td>
                                        <a class="btn btn-primary btn-sm" href="@Url.Action("Editar","Contacto", new {id = item.id})">Editar</a>
                                        <a class="btn btn-danger btn-sm" href="@Url.Action("Eliminar","Contacto",new {id = item.id})">Eliminar</a>
                                    </td>
                                </tr>
                            }
                        </tbody>       
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

